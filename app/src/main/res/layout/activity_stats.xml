<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.jonathan.dallascowboysmvps.StatsActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/headshot"
            android:layout_width="150sp"
            android:layout_height="150sp" />

        <fragment
            android:id="@+id/bio_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_bio"
            android:name="com.example.jonathan.dallascowboysmvps.Bio"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="350sp"
        android:layout_gravity="center_horizontal">

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10sp">

        </GridLayout>

    </ScrollView>

</LinearLayout>
